@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";  //Ensure your Layout is set
}

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card-custom {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .card-header-custom {
            background-color: #007bff;
            color: white;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .form-floating-custom .form-control {
            height: auto;
        }

        .btn-primary-custom {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 2rem;
        }

            .btn-primary-custom:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .text-center-custom {
            text-align: center;
        }
    </style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Footwear</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/ShoesShop_GroupProject.styles.css" asp-append-version="true" />
     <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Rokkitt:100,300,400,700" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~css/TemplateCss/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~css/TemplateCss/icomoon.css">
    <!-- Ion Icon Fonts-->
    <link rel="stylesheet" href="~css/TemplateCss/ionicons.min.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~css/TemplateCss/bootstrap.min.css">

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~css/TemplateCss/magnific-popup.css">

    <!-- Flexslider  -->
    <link rel="stylesheet" href="~css/TemplateCss/flexslider.css">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~css/TemplateCss/owl.carousel.min.css">
    <link rel="stylesheet" href="~css/TemplateCss/owl.theme.default.min.css">

    <!-- Date Picker -->
    <link rel="stylesheet" href="~css/TemplateCss/bootstrap-datepicker.css">
    <!-- Flaticons  -->
    <link rel="stylesheet" href="~css/fonts/flaticon/font/flaticon.css">

    <!-- Theme style  -->
    <link rel="stylesheet" href="~/css/TemplateCss/style.css">


</head>
<header>
    
</header>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-custom">
                <div class="card-header card-header-custom text-center-custom">
                    <h3 class="font-weight-light my-4">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <form id="account" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-floating form-floating-custom mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-custom mb-3">
                            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" />

                        <button id="login-submit" type="submit" class="btn btn-primary-custom w-100 py-2">Log in</button>
                        <div class="mt-3 text-center-custom">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                        <div class="mt-3 text-center-custom">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </div>
                        <div class="mt-3 text-center-custom">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


