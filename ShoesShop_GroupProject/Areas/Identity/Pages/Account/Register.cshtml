@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    // Layout = "_Layout";  Ensure your Layout is set
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card-custom {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-header-custom {
        background-color: #007bff;
        color: white;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .form-floating-custom .form-control {
        height: auto;
    }

    .btn-primary-custom {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 2rem;
    }

        .btn-primary-custom:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .text-center-custom {
        text-align: center;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-custom">
                <div class="card-header card-header-custom text-center-custom">
                    <h3 class="font-weight-light my-4">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-floating form-floating-custom mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-custom mb-3">
                            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating form-floating-custom mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="btn btn-primary-custom w-100 py-2">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
