@model ShoesShop_GroupProject.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h1 class="mb-4">Product Details</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Stock:</strong> @Model.Stock</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Brand:</strong> @Model.Brand</p>
            
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Delete</a>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
}
