@model List<ShoesShop_GroupProject.Models.CartItem>

<div class="container mt-5">
    <h1 class="mb-4">Your Shopping Cart</h1>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <a href="@Url.Action("DecreaseQuantity", new { productId = item.Product.Id })" class="btn btn-outline-danger btn-sm">-</a>
                                </span>
                                <input type="text" class="form-control text-center" value="@item.Quantity" readonly />
                                <span class="input-group-btn">
                                    <a href="@Url.Action("IncreaseQuantity", new { productId = item.Product.Id })" class="btn btn-outline-success btn-sm">+</a>
                                </span>
                            </div>
                        </td>
                        <td>$@item.Product.Price.ToString("F2")</td>
                        <td>$@(item.Product.Price * item.Quantity)</td>
                        <td>
                            <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="productId" value="@item.Product.Id" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <h4>Grand Total: $@Model.Sum(x => x.Product.Price * x.Quantity).ToString("F2")</h4>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
    }

    <div class="text-right">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Continue Shopping</a>
    </div>
</div>
