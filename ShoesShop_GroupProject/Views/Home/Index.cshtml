@{
	ViewData["Title"] = "Home Page";
}

<div class="colorlib-intro">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center"><br />
				<h2 class="intro">It started with a simple idea: Create quality, well-designed products that I wanted myself.</h2>
			</div>
		</div>
	</div>
</div><br />
<div class="colorlib-product">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6 text-center">
				<div class="featured">
					<a href="Home/MansShoes" class="featured-img" style="background-image: url('@Url.Content("~/css/images/men.jpg")');"></a>
					<div class="desc">
						<h2><a href="#">Shop Men's Collection</a></h2>
					</div>
				</div>
			</div>
			<div class="col-sm-6 text-center">
				<div class="featured">
					<a href="Home/WomensShoes" class="featured-img" style="background-image: url('@Url.Content("~/css/images/women.jpg")');"></a>
					<div class="desc">
						<h2><a href="#">Shop Women's Collection</a></h2>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="colorlib-product">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
				<h2>Best Sellers</h2>
			</div>
		</div>
		<div class="row row-pb-md">
			@foreach (var productItem in @ViewBag.products)
			{
				<div class="col-lg-3 mb-4 text-center">
					<div class="product-entry border">
						<a href="#" class="prod-img">
							<img src="@Url.Content(@productItem.ImagePath)" class="img-fluid" alt="Product image">
						</a>
						<div class="desc">
							<h2><a href="#">@productItem.Name</a></h2>
							<span class="price">$@productItem.Price</span>
						</div>
					</div>
				</div>


			}


		</div>
		<div class="row">
			<div class="col-md-12 text-center">
				<p><a href="#" class="btn btn-primary btn-lg">Shop All Products</a></p>
			</div>
		</div>
	</div>
</div>

<div class="colorlib-partner">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
				<h2>Trusted Partners</h2>
			</div>
		</div>
		<div class="row">
			<div class="col partner-col text-center">
				<img src="@Url.Content("~/css/images/brand-1.jpg")" class="img-fluid" alt="Free html4 bootstrap 4 template">
			</div>
			<div class="col partner-col text-center">
				<img src="@Url.Content("~/css/images/brand-2.jpg")" class="img-fluid" alt="Free html4 bootstrap 4 template">
			</div>
			<div class="col partner-col text-center">
				<img src="@Url.Content("~/css/images/brand-3.jpg")" class="img-fluid" alt="Free html4 bootstrap 4 template">
			</div>
			<div class="col partner-col text-center">
				<img src="@Url.Content("~/css/images/brand-4.jpg")" class="img-fluid" alt="Free html4 bootstrap 4 template">
			</div>
			<div class="col partner-col text-center">
				<img src="@Url.Content("~/css/images/brand-5.jpg")" class="img-fluid" alt="Free html4 bootstrap 4 template">
			</div>
		</div>
	</div>
</div>
